---
import BaseHead from "@/components/BaseHead.astro";
import Header from "@/components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "@/consts";
import Layout from "@/layouts/Main.astro";
import { Image } from "astro:assets";
---

<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body>
    <Header />
    <main class="grid min-h-full place-items-center px-6 py-6 lg:px-8">
      <div class="text-center">
        <p class="text-base font-semibold text-orange-500">404</p>
        <h1
          class="my-4 text-3xl font-bold tracking-tight text-gray-900 dark:text-accent-foreground sm:text-5xl"
        >
          Page not found
        </h1>
        <Image
          class={"mx-auto"}
          alt={"page not found"}
          src={"/404.png"}
          width={360}
          height={360}
          loading={"eager"}
        />
        <p class="mt-6 text-base leading-7 text-gray-600 dark:text-gray-400">
          Sorry, we couldn&apos;t find the page you&apos;re looking for.
        </p>
        <div class="mt-10 flex items-center justify-center gap-x-6">
          <a
            href="/"
            class="rounded-md bg-orange-500 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-amber-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
            >Go back home</a
          >
        </div>
      </div>
    </main></body
  >
</html>
